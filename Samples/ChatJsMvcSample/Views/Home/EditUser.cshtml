@model ChatJsMvcSample.Models.UserViewModel

@{
    this.Layout = "../_Layout.cshtml";
}

@section Header
{
    <link rel="stylesheet" type="text/css" href="/Content/Styles/signin.css" />
}

<div class="container">
    @using (this.Html.BeginForm("EditUser", "Home", FormMethod.Post))
    {
        <h2 class="form-heading">@(this.Model != null && this.Model.Id.HasValue ? "Edit user" : "Create user")</h2>
        
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.TextBoxFor(m => m.EMail, new { placeHolder = "E-Mail", @class = "form-control" })
        </p>
        <p>
            @Html.TextBoxFor(m => m.DisplayName, new { placeHolder = "Display name", @class = "form-control" })
        </p>
        if (this.Model == null || !this.Model.Id.HasValue)
        {
        <p>
            @Html.PasswordFor(m => m.Password, new { placeHolder = "Password", @class = "form-control" })
        </p>     
        }
        
        
        @Html.ValidationSummary(false)

        <button class="btn btn-primary btn-block" type="submit">Save</button>
    }
</div>
