@model ChatJsMvcSample.Models.UserViewModel

@{
    this.Layout = "../_Layout.cshtml";
}

@section Header
{
    <link rel="stylesheet" type="text/css" href="/Content/Styles/signin.css" />
}

<div class="container">
    @using (this.Html.BeginForm("ChangePassword", "Home", FormMethod.Post))
    {
        <h2 class="form-heading">Change password</h2>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.PasswordFor(m => m.Password, new { placeHolder = "Password", @class = "form-control" })
        </p>
        <p>
            @Html.PasswordFor(m => m.ConfirmPassword, new { placeHolder = "Confirm password", @class = "form-control" })
        </p>
        
        @Html.ValidationSummary(false)

        <button class="btn btn-large btn-primary btn-block" type="submit">Save</button>
    }
</div>
